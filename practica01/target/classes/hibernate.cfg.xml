<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/ud03</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Artilleria31&amp;</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <!--Para evitar Warning por versiones de Hibernate 5 a 6-->
        <property name="hibernate.transform_hbm_xml.enabled">true</property>
        <!-- Mostrar las consultas SQL 
        <property name="hibernate.show_sql">true</property>-->
        <!-- Formatear el SQL para que se lea mejor 
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">validate</property>-->
        <!-- Version antigua de mapeo  
        <mapping resource="models/profesor.hbm.xml"/>
        <mapping resource="models/alumno.hbm.xml"/>-->
    </session-factory>
</hibernate-configuration>