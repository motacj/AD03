<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="model">
    <class name="model.Alumno" table="alumno">
        <id name="idAlumno" column="idAlumno" type="int">
            <generator class="identity"/>
        </id>
        <property name="nombre" column="nombre" type="string"/>
        <property name="apellidos" column="apellidos" type="string"/>
        <property name="nota" column="nota" type="double"/>
        <many-to-one name="profesor"
             class="model.Profesor"
             column="idProf"
             not-null="true"/>
    </class>
</hibernate-mapping>